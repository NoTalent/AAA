@model AAA.Northwind.Mvc.WebUI.Models.CategoryListViewModel

    <div class="list-group" role="tablist">
        @foreach (var category in Model.Categories)
        {
            <a href="/product/index?category=@category.CategoryId" class="list-group-item list-group-item-action" data-toggle="list">@category.CategoryName</a>
        }
    </div>

